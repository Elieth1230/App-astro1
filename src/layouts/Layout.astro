---
import Navigation from '../components/Navigation.astro';

export interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "TAANAB Arquitectos", 
	description = "Diseño arquitectónico moderno que transforma espacios únicos con funcionalidad, estética y sostenibilidad." 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
		
		<!-- EmailJS SDK -->
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
		
		<title>{title}</title>
	</head>
	<body class="font-sans text-gray-800 bg-white overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	/* Scroll personalizado usando @apply */
	@layer utilities {
		.custom-scrollbar::-webkit-scrollbar {
			@apply w-2;
		}

		.custom-scrollbar::-webkit-scrollbar-track {
			@apply bg-gray-100;
		}

		.custom-scrollbar::-webkit-scrollbar-thumb {
			@apply bg-amber-700 rounded;
		}

		.custom-scrollbar::-webkit-scrollbar-thumb:hover {
			@apply bg-amber-800;
		}
	}

	/* Aplicar scroll personalizado globalmente */
	::-webkit-scrollbar {
		@apply w-2;
	}

	::-webkit-scrollbar-track {
		@apply bg-gray-100;
	}

	::-webkit-scrollbar-thumb {
		@apply bg-amber-700 rounded;
	}

	::-webkit-scrollbar-thumb:hover {
		@apply bg-amber-800;
	}

	/* Focus styles usando @apply */
	:focus {
		@apply outline-2 outline-amber-700 outline-offset-2;
	}

	:focus:not(:focus-visible) {
		@apply outline-none;
	}
</style>
