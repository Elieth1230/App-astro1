---
import Navigation from '../components/NavigationDropdown.astro';

export interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "TAANAB Arquitectos", 
	description = "Diseño arquitectónico moderno que transforma espacios únicos con funcionalidad, estética y sostenibilidad." 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	<body class="font-sans text-gray-800 bg-white overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	/* Scroll personalizado */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: #f1f1f1;
	}

	::-webkit-scrollbar-thumb {
		background: #8B4513;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #6B3410;
	}

	/* Focus styles para accesibilidad */
	:focus {
		outline: 2px solid #8B4513;
		outline-offset: 2px;
	}

	:focus:not(:focus-visible) {
		outline: none;
	}
</style>
