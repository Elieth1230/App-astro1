---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Proyectos Residenciales - TAANAB Arquitectos" description="Explora nuestros proyectos residenciales, casas y viviendas diseñadas con excelencia arquitectónica.">
  <Navigation />
  
  <main class="pt-20 min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-8 py-16">
      
      

      <!-- lista  de Subproyectos -->
      <div class="flex items-center justify-center min-h-[60vh]">
        
        <!-- Proyecto Residencial -->
        <a href="/proyectos/residencial/casa-ako" class="block group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-32 sm:h-40 md:h-48 lg:h-full xl:h-full rounded-lg sm:rounded-lg md:rounded-lg lg:rounded-none xl:rounded-none">
          <img 
            src="https://taanab.mx/images/proyects/residencial/casa-ako/00-ako.jpg"
            alt="Proyecto Residencial"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"/>
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-xl sm:text-2xl md:text-3xl lg:text-3xl xl:text-4xl font-light tracking-wider uppercase opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
              Casa ak'O
            </h2>
          </div>
         
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

      </div> 

      
      
    </div>
  </main>
  
  <Footer />
</Layout>