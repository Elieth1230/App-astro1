      <!-- Imagen principal -->
      <div class="mb-12">
        <div class="relative w-full max-w-2xl mx-auto bg-gray-100 rounded-lg">
          <img 
            id="main-image"
            src="https://taanab.mx/images/proyects/residencial/casa-ako/00-ako.jpg"
            alt="Casa AKO - Vista principal"
            class="w-full h-64 lg:h-80 object-contain rounded-lg shadow-lg"
          />
          
          
        </div>
      </div>

      <!-- Galería de miniaturas -->
      <div class="mb-12">
        <div class="flex justify-center space-x-4 overflow-x-auto pb-4">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/01-casa-ako.jpg" alt="Casa AKO - Vista 1" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/01-casa-ako.jpg">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/02-casa-ako.jpg" alt="Casa AKO - Vista 2" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/02-casa-ako.jpg">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/03-casa-ako.jpg" alt="Casa AKO - Vista 3" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/03-casa-ako.jpg">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/04-casa-ako.jpg" alt="Casa AKO - Vista 4" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/04-casa-ako.jpg">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/05-casa-ako.jpg" alt="Casa AKO - Vista 5" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/05-casa-ako.jpg">
          <img src="https://taanab.mx/images/proyects/residencial/casa-ako/06-casa-ako.jpg" alt="Casa AKO - Vista 6" class="w-24 h-16 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity duration-300 gallery-thumb flex-shrink-0" data-src="https://taanab.mx/images/proyects/residencial/casa-ako/06-casa-ako.jpg">
        </div>
      </div>

      <!-- Información del proyecto -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 bg-white rounded-lg shadow-lg p-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Terreno:</h3>
          <p class="text-gray-600">160 m2</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Construcción:</h3>
          <p class="text-gray-600">152 m2</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Año:</h3>
          <p class="text-gray-600">Abril 2024</p>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Ubicación:</h3>
          <p class="text-gray-600">Puerto Morelos, Quintana Roo, México</p>
        </div>
      </div>

      
      
    </div>
  </main>
  
  <Footer />
</Layout>

<script>
  // Galería de imágenes 
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('main-image') as HTMLImageElement;
    const thumbnails = document.querySelectorAll('.gallery-thumb') as NodeListOf<HTMLImageElement>;
    
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', () => {
        const newSrc = thumb.getAttribute('data-src');
        if (newSrc && mainImage) {
          mainImage.src = newSrc;
          mainImage.alt = thumb.alt;
        }
      });
    });
  });
</script>
