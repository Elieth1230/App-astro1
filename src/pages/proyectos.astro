---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Proyectos - TAANAB Arquitectos" description="Explora nuestros proyectos de arquitectura residencial, remodelaci贸n e interiores.">
  <Navigation />
  
  <main class="pt-20 sm:pt-24 md:pt-28 lg:pt-32 xl:pt-40 bg-white">
    <div class="max-w-sm sm:max-w-md md:max-w-4xl lg:max-w-6xl xl:max-w-7xl mx-auto px-4 sm:px-6 md:px-8 lg:px-8 xl:px-8">
      
      

      <!-- lista  de Proyectos -->
      <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-3 xl:grid-cols-3 gap-4 sm:gap-6 md:gap-8 lg:gap-0 xl:gap-0 h-auto sm:h-auto md:h-auto lg:h-[calc(100vh-150px)] xl:h-[calc(100vh-150px)]">
        
        <!-- Proyecto Residencial -->
        <a href="/proyectos/residencial" class="block group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-64 sm:h-72 md:h-80 lg:h-full xl:h-full rounded-lg sm:rounded-lg md:rounded-lg lg:rounded-none xl:rounded-none">
          <img 
            src="https://taanab.mx/images/proyects/residencial.jpg"
            alt="Proyecto Residencial"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"/>
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-xl sm:text-2xl md:text-3xl lg:text-3xl xl:text-4xl font-light tracking-wider uppercase opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
              Residencial
            </h2>
          </div>
         
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

        <!-- Proyecto Remodelaci贸n -->
        <a href="/proyectos/remodelacion" class="block group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-64 sm:h-72 md:h-80 lg:h-full xl:h-full rounded-lg sm:rounded-lg md:rounded-lg lg:rounded-none xl:rounded-none">
          <img 
            src="https://taanab.mx/images/proyects/remodelacion.jpg"
            alt="Proyecto Remodelaci贸n"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-xl sm:text-2xl md:text-3xl lg:text-3xl xl:text-4xl font-light tracking-wider uppercase opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
              Remodelaci贸n
            </h2>
          </div>
          
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

        <!-- Proyecto Interiores -->
        <a href="/proyectos/interiores" class="block group relative overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-64 sm:h-72 md:h-80 lg:h-full xl:h-full rounded-lg sm:rounded-lg md:rounded-lg lg:rounded-none xl:rounded-none">
          <img 
            src="https://taanab.mx/images/proyects/interiores.jpg"
            alt="Proyecto Interiores"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-xl sm:text-2xl md:text-3xl lg:text-3xl xl:text-4xl font-light tracking-wider uppercase opacity-0 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
              Interiores
            </h2>
          </div>
         
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

      </div> 

      
      
    </div>
  </main>
  
  <Footer />
</Layout>