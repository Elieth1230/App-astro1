---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Proyectos - TAANAB Arquitectos" description="Explora nuestros proyectos de arquitectura residencial, remodelaci贸n e interiores.">
  <Navigation />
  
  <main class="pt-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-8">
      
      

      <!-- lista  de Proyectos -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 h-[calc(100vh-132px)]">
        
        <!-- Proyecto Residencial -->
        <a href="/proyectos/residencial" class="block group relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-full">
          <img 
            src="https://taanab.mx/images/proyects/residencial.jpg"
            alt="Proyecto Residencial"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"/>
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-3xl lg:text-4xl font-light tracking-wider uppercase group-hover:scale-110 transition-transform duration-500">
              Residencial
            </h2>
          </div>
         
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

        <!-- Proyecto Remodelaci贸n -->
        <a href="/proyectos/remodelacion" class="block group relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-full">
          <img 
            src="https://taanab.mx/images/proyects/remodelacion.jpg"
            alt="Proyecto Remodelaci贸n"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-3xl lg:text-4xl font-light tracking-wider uppercase group-hover:scale-110 transition-transform duration-500">
              Remodelaci贸n
            </h2>
          </div>
          
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

        <!-- Proyecto Interiores -->
        <a href="/proyectos/interiores" class="block group relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-500 cursor-pointer h-full">
          <img 
            src="	https://taanab.mx/images/proyects/interiores.jpg"
            alt="Proyecto Interiores"
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-60 transition-all duration-500"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <h2 class="text-white text-3xl lg:text-4xl font-light tracking-wider uppercase group-hover:scale-110 transition-transform duration-500">
              Interiores
            </h2>
          </div>
         
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </a>

      </div> 

      
      
    </div>
  </main>
  
  <Footer />
</Layout>