<style>
  .main-footer {
    background: #1a1a1a;
    color: #ffffff;
    padding: 4rem 0 2rem;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 3px;
    color: #ffffff;
    margin-bottom: 0.5rem;
  }

  .footer-subtitle {
    font-size: 0.9rem;
    letter-spacing: 2px;
    color: #8B4513;
    display: block;
    margin-bottom: 2rem;
  }

  .footer-description {
    color: #cccccc;
    line-height: 1.6;
    font-weight: 300;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .footer-column h4 {
    font-size: 1.1rem;
    font-weight: 400;
    letter-spacing: 1px;
    color: #ffffff;
    margin-bottom: 1.5rem;
  }

  .footer-column ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-column ul li {
    margin-bottom: 0.8rem;
  }

  .footer-column ul li a {
    color: #cccccc;
    text-decoration: none;
    font-weight: 300;
    transition: color 0.3s ease;
  }

  .footer-column ul li a:hover {
    color: #8B4513;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-item strong {
    color: #8B4513;
    font-size: 0.9rem;
    letter-spacing: 1px;
    display: block;
    margin-bottom: 0.5rem;
  }

  .contact-item p {
    color: #cccccc;
    margin: 0.3rem 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: #cccccc;
    transition: color 0.3s ease, transform 0.3s ease;
    display: block;
  }

  .social-links a:hover {
    color: #8B4513;
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 2rem;
  }

  .footer-legal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #888;
    font-size: 0.9rem;
  }

  .legal-links {
    display: flex;
    gap: 2rem;
  }

  .legal-links a {
    color: #888;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .legal-links a:hover {
    color: #8B4513;
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .main-footer {
      padding: 3rem 0 2rem;
    }

    .footer-container {
      padding: 0 1rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-info {
      gap: 1.5rem;
    }

    .footer-legal {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .legal-links {
      gap: 1rem;
    }
  }
</style>
