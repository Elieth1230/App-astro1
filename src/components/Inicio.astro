  <!-- Playa del Carmen en inferior derecha -->
  <div class="absolute bottom-4 sm:bottom-6 md:bottom-8 lg:bottom-8 xl:bottom-8 right-4 sm:right-6 md:right-8 lg:right-8 xl:right-8 z-30 opacity-0 translate-y-8 animate-fade-in-up" style="animation-delay: 1.4s;">
    <div class="location-item text-right">
      <h2 class="text-white font-semibold text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-3xl tracking-[1px] sm:tracking-[1.5px] md:tracking-[2px] lg:tracking-[2px] xl:tracking-[2px] mb-1 sm:mb-1 md:mb-2 lg:mb-2 xl:mb-2 drop-shadow-[0_4px_8px_rgba(0,0,0,0.9)] sm:drop-shadow-[0_5px_10px_rgba(0,0,0,0.9)] md:drop-shadow-[0_6px_12px_rgba(0,0,0,0.9)] lg:drop-shadow-[0_6px_12px_rgba(0,0,0,0.9)] xl:drop-shadow-[0_6px_12px_rgba(0,0,0,0.9)] hover:scale-105 transition-transform duration-300 hover:drop-shadow-[0_8px_16px_rgba(0,0,0,0.95)] sm:hover:drop-shadow-[0_9px_18px_rgba(0,0,0,0.95)] md:hover:drop-shadow-[0_10px_20px_rgba(0,0,0,0.95)] lg:hover:drop-shadow-[0_10px_20px_rgba(0,0,0,0.95)] xl:hover:drop-shadow-[0_10px_20px_rgba(0,0,0,0.95)]" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.9), 3px 3px 6px rgba(0,0,0,0.9);">PLAYA DEL CARMEN</h2>
