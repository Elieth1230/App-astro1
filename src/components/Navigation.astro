---
// Componente de navegación moderna estilo arquitectónico con dropdown
// Detectar la página actual para cambiar colores
const currentPath = Astro.url.pathname;
const isInternalPage = currentPath.includes('/proyectos') || currentPath.includes('/info') || currentPath.includes('/contacto');
---

<!-- Barra superior fija con padding lateral responsive -->
<div class="fixed top-0 left-0 right-0 bg-white/[0.02] backdrop-blur-[1px] border border-white/[0.05] z-50 translate-y-0 transition-none shadow-2xl" id="topBar">
  <div class="px-4 sm:px-6 md:px-8 lg:px-8 xl:px-8 py-6 sm:py-7 md:py-8 lg:py-9 xl:py-11 flex justify-between items-center">
    <a href="/" class="logo flex items-center gap-2 sm:gap-2 md:gap-3 lg:gap-3 xl:gap-3 ml-4 sm:ml-8 md:ml-12 lg:ml-16 xl:ml-24">
      <!-------- Logo -------->
      <img 
        src={isInternalPage ? "https://taanab.mx/images/logo_black.svg" : "https://taanab.mx/images/logo_white.svg"}
        alt="TAANAB Arquitectos" 
        class="h-10 sm:h-11 md:h-12 lg:h-13 xl:h-15 w-auto object-contain"
      />
      
      
    
    <!-- Contenedor relativo para el dropdown responsive -->
    <div class="relative mr-4 sm:mr-8 md:mr-12 lg:mr-16 xl:mr-24">
      <button class="nav-toggle bg-transparent border-none cursor-pointer p-2 sm:p-3 md:p-4 lg:p-4 xl:p-4 flex flex-col justify-center items-center gap-1 sm:gap-1 md:gap-2 lg:gap-2 xl:gap-2 transition-all duration-300" id="navToggle" aria-label="Abrir menú de navegación">
        <span class={`hamburger-line w-6 sm:w-7 md:w-8 lg:w-9 xl:w-10 h-0.5 sm:h-0.5 md:h-1 lg:h-1 xl:h-1 ${isInternalPage ? 'bg-black' : 'bg-white'} transition-all duration-300 origin-center`}></span>
        <span class={`hamburger-line w-6 sm:w-7 md:w-8 lg:w-9 xl:w-10 h-0.5 sm:h-0.5 md:h-1 lg:h-1 xl:h-1 ${isInternalPage ? 'bg-black' : 'bg-white'} transition-all duration-300 origin-center`}></span>
        <span class={`hamburger-line w-6 sm:w-7 md:w-8 lg:w-9 xl:w-10 h-0.5 sm:h-0.5 md:h-1 lg:h-1 xl:h-1 ${isInternalPage ? 'bg-black' : 'bg-white'} transition-all duration-300 origin-center`}></span>
      </button>
      
      <!-- Menú desplegable responsive -->
      <nav class="fixed top-16 sm:top-18 md:top-20 lg:top-22 xl:top-24 right-4 sm:right-8 md:right-12 lg:right-16 xl:right-24 w-28 sm:w-32 md:w-36 lg:w-40 xl:w-[140px] h-[calc(100vh-64px)] sm:h-[calc(100vh-72px)] md:h-[calc(100vh-80px)] lg:h-[calc(100vh-88px)] xl:h-[calc(100vh-96px)] bg-white/95 backdrop-blur-xl invisible opacity-0 transition-all duration-500 z-30 transform -translate-y-full" id="dropdownNav">
        <div class="w-full h-full flex flex-col items-center justify-start pt-4 sm:pt-5 md:pt-6 lg:pt-7 xl:pt-8">
          <ul class="list-none m-0 p-0 space-y-0">
            <li><a href="/proyectos" class="nav-link text-black text-base sm:text-lg md:text-xl lg:text-xl xl:text-xl relative no-underline w-28 sm:w-32 md:w-36 lg:w-40 xl:w-[140px] h-20 sm:h-24 md:h-28 lg:h-32 xl:h-[118.8px] transition-all duration-300 flex items-center justify-center hover:shadow-md" style="transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='oklch(70.9% 0.01 56.259)'" onmouseout="this.style.backgroundColor='transparent'">Proyectos</a></li>
            <li><a href="/info" class="nav-link text-black text-base sm:text-lg md:text-xl lg:text-xl xl:text-xl relative no-underline w-28 sm:w-32 md:w-36 lg:w-40 xl:w-[140px] h-20 sm:h-24 md:h-28 lg:h-32 xl:h-[118.8px] transition-all duration-300 flex items-center justify-center hover:shadow-md" style="transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='oklch(70.9% 0.01 56.259)'" onmouseout="this.style.backgroundColor='transparent'">Nosotros</a></li>
            <li><a href="/contacto" class="nav-link text-black text-base sm:text-lg md:text-xl lg:text-xl xl:text-xl relative no-underline w-28 sm:w-32 md:w-36 lg:w-40 xl:w-[140px] h-20 sm:h-24 md:h-28 lg:h-32 xl:h-[118.8px] transition-all duration-300 flex items-center justify-center hover:shadow-md" style="transition: all 0.3s ease;" onmouseover="this.style.backgroundColor='oklch(70.9% 0.01 56.259)'" onmouseout="this.style.backgroundColor='transparent'">Contacto</a></li>
