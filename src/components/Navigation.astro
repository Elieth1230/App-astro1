              </svg>
            </a>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Navigation script loaded'); // Debug
    
    const navToggle = document.getElementById('navToggle');
    const dropdownNav = document.getElementById('dropdownNav');
    const navLinks = document.querySelectorAll('.nav-link');
    
    console.log('navToggle:', navToggle); // Debug
    console.log('dropdownNav:', dropdownNav); // Debug
    
    let isNavOpen = false;
    
    function openNav() {
      console.log('Opening nav'); // Debug
      isNavOpen = true;
      if (dropdownNav) {
        dropdownNav.classList.remove('invisible', 'opacity-0', '-translate-y-full');
        dropdownNav.classList.add('visible', 'opacity-100', 'translate-y-0');
      }
      
      // Hamburger a X con animación mejorada
      const lines = navToggle?.querySelectorAll('.hamburger-line') as NodeListOf<HTMLElement>;
      if (lines) {
        lines[0].style.transform = 'rotate(45deg) translate(6px, 6px)';
        lines[1].style.opacity = '0';
        lines[1].style.transform = 'scale(0)';
        lines[2].style.transform = 'rotate(-45deg) translate(6px, -6px)';
      }
      
      // Prevenir scroll del body
      document.body.style.overflow = 'hidden';
    }
    
    function closeNav() {
      console.log('Closing nav'); // Debug
      isNavOpen = false;
      
      // X a hamburger
      const lines = navToggle?.querySelectorAll('.hamburger-line') as NodeListOf<HTMLElement>;
      if (lines) {
        lines[0].style.transform = '';
        lines[1].style.opacity = '';
        lines[1].style.transform = '';
        lines[2].style.transform = '';
      }
      
      if (dropdownNav) {
        dropdownNav.classList.add('invisible', 'opacity-0', '-translate-y-full');
        dropdownNav.classList.remove('visible', 'opacity-100', 'translate-y-0');
      }
      
      // Restaurar scroll del body
      document.body.style.overflow = '';
    }
    
    // Toggle del menú
    if (navToggle) {
      navToggle.addEventListener('click', function(e) {
        console.log('Button clicked, isNavOpen:', isNavOpen); // Debug
        e.preventDefault();
        e.stopPropagation();
        
        if (isNavOpen) {
          closeNav();
        } else {
          openNav();
        }
      });
    }
    
    // Cerrar al hacer click en un enlace
    navLinks.forEach(link => {
      link.addEventListener('click', closeNav);
    });
    
    // Cerrar al hacer click en el fondo del menú (no en el contenido)
    if (dropdownNav) {
      dropdownNav.addEventListener('click', function(e) {
        if (e.target === dropdownNav) {
          closeNav();
        }
      });
    }
    
    // Cerrar con la tecla Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isNavOpen) {
        closeNav();
      }
    });
  });
</script>
